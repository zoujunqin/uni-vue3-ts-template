{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"],
      "@http/*": ["src/static/*"]
    },
    "types": ["@dcloudio/types", "node", "vite/client"],
    "typeRoots": [
      "./node_modules",
      "./node_modules/@dcloudio/types",
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "build/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "node_modules/.pnpm/unplugin-auto-import@0.16.7/node_modules/unplugin-auto-import/auto-imports.d.ts"
  ],
  "exclude": [
    "dist",
    "hro-webs",
    "node_modules",
    "unpackage",
    "src/**/*.nvue",
    "src/components/ProForm/*",
    "src/components/ProFormItem/*",
    "src/components/ProCheckbox/*",
    "src/components/ProCheckboxGroup/*",
    "src/pages.json",
    "**/*.js",
    "**/__tests__/**/*"
  ]
}
