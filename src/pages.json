{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue",
      "^Pro(.*)": "@/components/Pro$1/Pro$1.vue",
      "^Pro(.*)": "@/components/Pro/Pro$1/Pro$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/portal/index"
    },
    {
      "path": "pages/login/index"
    },
    {
      "path": "pages/login/mobileLogin"
    }
  ],
  "subPackages": [
    {
      "root": "pagesTask",
      "name": "pagesTask",
      "pages": [
        {
          "path": "taskDetail/index"
        }
      ]
    },
    {
      "root": "pagesAuth",
      "name": "pagesAuth",
      "pages": [
        {
          "path": "realName/index"
        },
        {
          "path": "realNameSuccess/index"
        }
      ]
    },
    {
      "root": "pagesPerson",
      "name": "pagesPerson",
      "pages": [
        {
          "path": "personMessage/index"
        },
        {
          "path": "bankCard/index",
          "style": {
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "myContract/index",
          "style": {
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "myInsurance/index",
          "style": {
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "remuneration/index",
          "style": {
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "agreement/index"
        },
        {
          "path": "remuneration/remunerationDetails"
        }
      ]
    },
    {
      "root": "pagesTransfer",
      "name": "pagesTransfer",
      "pages": [
        {
          "path": "index"
        }
      ]
    }
  ],
  "preloadRule": {
    "pages/portal/index": {
      "network": "all",
      "packages": ["pagesTask", "pagesPerson"]
    }
  },
  "globalStyle": {
    "navigationStyle": "custom"
  }
}
