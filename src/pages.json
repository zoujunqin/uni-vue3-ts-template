{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue",
      "^pro-(.*)": "@/components/pro-$1/pro-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/task/task-center/index"
    },
    {
      "path": "pages/person/person-center/index"
    },
    {
      "path": "pages/divide/divide-task/index"
    },
    {
      "path": "pages/login/index"
    }
  ],
  "tabBar": {
    "height": 0,
    "list": [
      {
        "pagePath": "pages/task/task-center/index"
      },
      {
        "pagePath": "pages/divide/divide-task/index"
      },
      {
        "pagePath": "pages/person/person-center/index"
      }
    ]
  },
  "globalStyle": {
    "navigationStyle": "custom"
  }
}
