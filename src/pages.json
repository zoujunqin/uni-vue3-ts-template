{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue",
      "^Pro(.*)": "@/components/Pro$1/Pro$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pagesAuth/realName/index"
    },
    {
      "path": "pages/login/index"
    },
    {
      "path": "pages/login/mobileLogin"
    },
    {
      "path": "pages/taskCenter/index",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/divideTask/index"
    },
    {
      "path": "pages/personCenter/index"
    }
  ],
  "subPackages": [
    {
      "root": "pagesTask",
      "name": "pagesTask",
      "pages": [
        {
          "path": "taskDetail/index"
        }
      ]
    }
//    {
//      "root": "pagesAuth",
//      "name": "pagesAuth",
//      "pages": [
//        {
//          "path": "realName/index"
//        }
//      ]
//    }
  ],
  "preloadRule": {
    "pages/taskCenter/index": {
      "network": "all",
      "packages": ["pagesTask"]
    }
  },
  "tabBar": {
    "height": "0",
    "list": [
      {
        "pagePath": "pages/taskCenter/index"
      },
      {
        "pagePath": "pages/divideTask/index"
      },
      {
        "pagePath": "pages/personCenter/index"
      }
    ]
  },
  "globalStyle": {
    "navigationStyle": "custom"
  }
}
