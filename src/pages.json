{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue",
      "^Pro(.*)": "@/components/Pro$1/Pro$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/task/taskCenter/index",
      "style": {
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/task/taskDetail/index"
    },
    {
      "path": "pages/person/personCenter/index"
    },
    {
      "path": "pages/divide/divideTask/index"
    },
    {
      "path": "pages/login/index"
    }
  ],
  "tabBar": {
    "height": 0,
    "list": [
      {
        "pagePath": "pages/task/taskCenter/index"
      },
      {
        "pagePath": "pages/divide/divideTask/index"
      },
      {
        "pagePath": "pages/person/personCenter/index"
      }
    ]
  },
  "globalStyle": {
    "navigationStyle": "custom"
  }
}
